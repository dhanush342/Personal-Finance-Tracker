            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Grocery shopping\",\n  \"amount\": 50.00,\n  \"category\": \"Food\",\n  \"type\": \"expense\",\n  \"paymentMethod\": \"credit_card\",\n  \"notes\": \"Weekly groceries\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/transactions",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "transactions"]
            }
          }
        },
